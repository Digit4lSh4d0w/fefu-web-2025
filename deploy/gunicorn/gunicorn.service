[Unit]
Description=Gunicorn application server for fefu-lab
After=network.target

[Service]
Type=notify
User=www-data
Group=www-data
WorkingDirectory=/var/www/fefu-lab/src
Environment="PATH=/var/www/fefu-lab/.venv/bin"
ExecStart=/var/www/fefu-lab/.venv/bin/gunicorn --bind 127.0.0.1:8000 --bind [::1]:8000 web_2025.wsgi:application
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
